= render partial: "devise/header_view"

.cards.clearfix
  .card-new
    %h2.card-new__top
      クレジットカード情報入力
    .card-new__container
      .card-new__container__margin
        = form_tag(pay_card_index_path, method: :post, id: 'charge-form',  name: "inputForm") do
          %label カード番号
          %span.require 必須
          %br/
          = text_field_tag "number", "", class: "number", placeholder: "半角数字のみ" ,maxlength: "16", type: "text", id: "card_number"
          %br
      .card-new__container__deadline
        %label 有効期限
        %span.require 必須
        %br/
        .card-new__container__deadline__form
          .card-new__container__deadline__form__left
            %select#exp_month{name: "exp_month", type: "text", class: "left"}
              %option{value: ""} --
              %option{value: "1"}01
              %option{value: "2"}02
              %option{value: "3"}03
              %option{value: "4"}04
              %option{value: "5"}05
              %option{value: "6"}06
              %option{value: "7"}07
              %option{value: "8"}08
              %option{value: "9"}09
              %option{value: "10"}10
              %option{value: "11"}11
              %option{value: "12"}12
            %span 月/
          .card-new__container__deadline__form__right
            %select#exp_year{name: "exp_year", type: "text", class: "right"}
              %option{value: ""} --
              %option{value: "2019"}19
              %option{value: "2020"}20
              %option{value: "2021"}21
              %option{value: "2022"}22
              %option{value: "2023"}23
              %option{value: "2024"}24
              %option{value: "2025"}25
              %option{value: "2026"}26
              %option{value: "2027"}27
              %option{value: "2028"}28
              %option{value: "2029"}29
            %span 年
            %br
      .card-new__container__form-group
        %label セキュリティコード
        %span.require 必須
        %br/
        = text_field_tag "cvc", "", class: "number", placeholder: "カード背面3~4桁の番号", maxlength: "4", id: "cvc"
      
      = submit_tag "追加する", id: "token_submit", class: "add"

  = render partial: "users/side-box"

= render partial: "devise/footer_view"
