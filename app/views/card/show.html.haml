= render partial: "devise/header_view"

.cards.clearfix
  .card-show
    %h2.card-show__top
      登録クレジットカード情報
    .card-show__container
      .card-show__container__margin
        %ul
          %li クレジットカード番号
          %h4
            = "**** **** **** " + @default_card_information.last4
        %ul
          %li 使用期限
          %h4
            - exp_month = @default_card_information.exp_month.to_s
            - exp_year = @default_card_information.exp_year.to_s.slice(2,3)
            = exp_month + " / " + exp_year

        .card-show__container__margin__deleat
          = form_tag(delete_card_index_path, method: :post, id: 'charge-form', name: "inputForm") do
            %input{ type: "hidden", name: "card_id", value: "" }
            %button{ class: "delete" }削除する

  = render partial: "users/side-box"

= render partial: "devise/footer_view"
