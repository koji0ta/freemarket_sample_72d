= render "header_view"

.login-main
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .login-main__panel
      .login-main__panel__account
        %h1 アカウントをお持ちでない方はこちら
        = link_to "新規会員登録", new_registration_path(resource_name)
      .login-main__panel__form-inner
        .login-main__panel__form-inner__text-password
          = f.email_field :email, autofocus: true, autocomplete: "email", class: "text-form", placeholder: "メールアドレス"
          = f.password_field :password, autocomplete: "current-password", class: "password-form", placeholder: "パスワード"
        - if devise_mapping.rememberable?
        
          .login-main__panel__form-inner__submit-btn
            = f.submit "ログイン", class: "btn"
            = link_to "パスワードをお忘れの方", "#"

        .sns-btns
          = link_to 'Facebookでログイン', user_facebook_omniauth_authorize_path, method: :post, class: 'sns-btn facebook-btn'
          = link_to 'Googleでログイン', user_google_oauth2_omniauth_authorize_path, method: :post, class: 'sns-btn google-btn'

= render "footer_view"
